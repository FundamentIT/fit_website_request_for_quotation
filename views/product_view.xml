<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_template_view_form_request_for_quotation" model="ir.ui.view">
        <field name="name">product.template.view.form.request.quotation</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='shop']" position="inside">
                <group string="Quotation">
                    <field name="website_request_quote"/>
                </group>    
            </xpath>
        </field>
    </record>
</odoo>
